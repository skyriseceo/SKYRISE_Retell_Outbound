@section Scripts {
    <script>
        // ═══════════════════════════════════════════════════════════════
        // GLOBAL VARIABLES
        // ═══════════════════════════════════════════════════════════════
        const statusMap = {
            0: { name: "Booked", class: "badge-booked", icon: "fa-check" },
            1: { name: "Confirmed", class: "badge-contacted", icon: "fa-calendar-check" },
            2: { name: "Cancelled", class: "badge-failed", icon: "fa-times-circle" }
        };

        let currentPageBookings = [];
        let currentPage = 1;
        let debounceTimer;

        // ═══════════════════════════════════════════════════════════════
        // MODAL FUNCTIONS
        // ═══════════════════════════════════════════════════════════════
        function openModal(modalId) {
            document.getElementById(modalId).classList.remove('hidden');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        // ═══════════════════════════════════════════════════════════════
        // HELPER FUNCTIONS
        // ═══════════════════════════════════════════════════════════════
        function getInitials(name) {
            if (!name) return '??';
            const parts = name.trim().split(' ').filter(Boolean);
            if (parts.length >= 2) {
                return (parts[0][0] + (parts[parts.length - 1][0] ?? '')).toUpperCase();
            } else if (parts.length === 1 && parts[0].length > 0) {
                return parts[0].substring(0, 2).toUpperCase();
            }
            return '??';
        }

        function escapeHtml(text) {
            if (typeof text !== 'string') return '';
            const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
            return text.replace(/[&<>\"']/g, m => map[m]);
        }

        // ═══════════════════════════════════════════════════════════════
        // LOAD BOOKINGS (SERVER-SIDE PAGINATION)
        // ═══════════════════════════════════════════════════════════════
        async function loadBookings(pageNumber = 1) {
            currentPage = pageNumber;
            const searchTerm = document.getElementById('searchBookingInput').value;
            const status = document.getElementById('filterStatus').value;

            document.getElementById('bookingsTableBody').innerHTML = `
                <tr>
                    <td colspan="7">
                        <div class="loading-container">
                            <div class="spinner"></div>
                            <p class="loading-text">Loading bookings...</p>
                        </div>
                    </td>
                </tr>`;

            document.getElementById('paginationControls').innerHTML = '';

            const params = new URLSearchParams({
                PageNumber: currentPage,
                PageSize: 25,
                SearchTerm: searchTerm,
                Status: status
            });

            try {
                const response = await fetch(`/api/booking/paginated?${params.toString()}`);

                if (response.status === 404) {
                    currentPageBookings = [];
                    renderBookings([]);
                    renderPagination(null);
                    return;
                }

                if (!response.ok) {
                    let errorMsg = 'Failed to fetch bookings';
                    try {
                        const errorResult = await response.json();
                        if (errorResult && errorResult.message) errorMsg = errorResult.message;
                    } catch (e) { /* ignore */ }
                    throw new Error(errorMsg);
                }

                const pagedData = await response.json();
                currentPageBookings = pagedData.items;
                renderBookings(pagedData.items);
                renderPagination(pagedData);

            } catch (error) {
                console.error('Error loading bookings:', error);
                if (typeof showToast === 'function') {
                    showToast(error.message, 'error');
                } else {
                    alert(error.message);
                }
                document.getElementById('bookingsTableBody').innerHTML = `
                <tr>
                    <td colspan="7">
                        <div class="empty-state">
                            <i class="fas fa-exclamation-circle empty-icon" style="color: var(--danger-500);"></i>
                            <p class="empty-text" style="color: var(--danger-600);">${error.message}</p>
                        </div>
                    </td>
                </tr>`;
            }
        }

        // ═══════════════════════════════════════════════════════════════
        // LOAD STATISTICS
        // ═══════════════════════════════════════════════════════════════
        async function loadStatistics() {
            try {
                const response = await fetch('/api/booking/statistics');
                if (!response.ok) throw new Error('Failed to fetch stats');

                const stats = await response.json();

                document.getElementById('totalBookings').textContent = stats.totalCount || 0;
                document.getElementById('weekBookings').textContent = stats.weekCount || 0;
                document.getElementById('todayBookings').textContent = stats.todayCount || 0;

            } catch (error) {
                console.error('Error loading statistics:', error);
                if (typeof showToast === 'function') showToast('Failed to load statistics', 'warning');
                document.getElementById('totalBookings').textContent = 'N/A';
                document.getElementById('weekBookings').textContent = 'N/A';
                document.getElementById('todayBookings').textContent = 'N/A';
            }
        }

        // ═══════════════════════════════════════════════════════════════
        // RENDER PAGINATION
        // ═══════════════════════════════════════════════════════════════
        function renderPagination(pagedData) {
            const controlsContainer = document.getElementById('paginationControls');

            if (!pagedData || pagedData.totalPages <= 1) {
                controlsContainer.innerHTML = '';
                return;
            }

            const { currentPage, totalPages, totalCount, pageSize, items } = pagedData;
            const startItem = (currentPage - 1) * pageSize + 1;
            const endItem = startItem + items.length - 1;

            controlsContainer.innerHTML = `
                <div class="pagination-info">
                    Showing <span>${startItem}</span> to <span>${endItem}</span> of <span>${totalCount}</span> results
                </div>
                <div class="pagination-controls">
                    <button onclick="loadBookings(${currentPage - 1})" class="pagination-btn" ${currentPage === 1 ? 'disabled' : ''}>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <span class="pagination-page">Page ${currentPage} of ${totalPages}</span>
                    <button onclick="loadBookings(${currentPage + 1})" class="pagination-btn" ${currentPage === totalPages ? 'disabled' : ''}>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            `;
        }

        // ═══════════════════════════════════════════════════════════════
        // RENDER BOOKINGS TABLE
        // ═══════════════════════════════════════════════════════════════
        // ═══════════════════════════════════════════════════════════════
         // RENDER BOOKINGS TABLE (MODIFIED FOR BETTER UI)
         // ═══════════════════════════════════════════════════════════════
         function renderBookings(data) {
             const tbody = document.getElementById('bookingsTableBody');

             if (data.length === 0) {
                 tbody.innerHTML = `
                 <tr>
                     <td colspan="7">
                         <div class="empty-state">
                             <i class="fas fa-calendar-times empty-icon"></i>
                             <p class="empty-text">No bookings found matching your criteria</p>
                         </div>
                     </td>
                 </tr>`;
                 return;
             }

             tbody.innerHTML = data.map(booking => {
                 const status = statusMap[booking.status] || { name: "Unknown", class: "badge-failed", icon: "fa-question" };
                 const createdDate = new Date(booking.createdAt).toLocaleDateString();
                 const bookingDate = booking.appointmentTime ? new Date(booking.appointmentTime).toLocaleDateString() : 'N/A';

                 const customerName = booking.prospectName || 'Unknown';
                 const customerPhone = booking.prospectPhone || 'N/A';
                 const customerEmail = booking.prospectEmail || 'N/A';
                 const bookingId = booking.bookingId;
                 const initials = getInitials(customerName);

                 // [MODIFIED] The row structure is now using the new .data-cell styles
                 return `
                 <tr data-booking-id="${bookingId}">

                     <td>
                         <div class="customer-info">
                             <div class="avatar">${escapeHtml(initials)}</div>
                             <div class="customer-details">
                                 <div class="customer-name">${escapeHtml(customerName)}</div>
                                 <div class="customer-id">ID: #${bookingId}</div>
                             </div>
                         </div>
                     </td>

                     <td>
                         <div class="data-cell">
                             <div class="data-label">Phone</div>
                             <div class="data-value">
                                 <i class="fas fa-phone"></i>
                                 <span>${escapeHtml(customerPhone)}</span>
                             </div>
                         </div>
