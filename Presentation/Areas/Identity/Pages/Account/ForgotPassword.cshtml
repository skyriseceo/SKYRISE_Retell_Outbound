@page
@model ForgotPasswordModel

@{
 ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skyrise</title>
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        .forgot-gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
      
        .glass-effect {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      }
        
    .floating-animation {
            animation: float 6s ease-in-out infinite;
   }
        
        @@keyframes float {
         0%, 100% { transform: translateY(0px); }
       50% { transform: translateY(-20px); }
        }
      
     .fade-in {
            animation: fadeIn 1s ease-out;
     }
   
        @@keyframes fadeIn {
     from { opacity: 0; }
            to { opacity: 1; }
     }
        
        .input-focus-effect {
         transition: all 0.3s ease;
        }
        
        .input-focus-effect:focus {
         transform: translateY(-2px);
       box-shadow: 0 10px 25px rgba(102, 126, 234, 0.2);
        }
        
        .btn-hover-effect {
            transition: all 0.3s ease;
        }
     
        .btn-hover-effect:hover {
            transform: translateY(-2px);
       box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body class="forgot-gradient min-h-screen flex items-center justify-center p-4">
    <!-- Animated Background Shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white opacity-10 rounded-full blur-3xl floating-animation"></div>
   <div class="absolute bottom-20 right-10 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl floating-animation" style="animation-delay: 3s;"></div>
    </div>

    <!-- Forgot Password Container -->
    <div class="w-full max-w-md mx-auto relative z-10 fade-in">
        <div class="glass-effect rounded-3xl shadow-2xl overflow-hidden p-8">
         <!-- Icon -->
            <div class="text-center mb-8">
             <div class="inline-block p-6 bg-gradient-to-br from-indigo-600 to-purple-700 rounded-full floating-animation">
            <i class="fas fa-key text-5xl text-white"></i>
      </div>
      </div>

         <!-- Header -->
            <div class="text-center mb-8">
     <h1 class="text-3xl font-bold text-gray-800 mb-2">Forgot Password?</h1>
       <p class="text-gray-600">No worries! Enter your email and we'll send you reset instructions.</p>
            </div>

     <!-- Form -->
            <form method="post">
          <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-lg text-red-700" role="alert"></div>
     
       <!-- Email Input -->
  <div class="mb-6">
       <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-2">
           <i class="fas fa-envelope mr-2 text-indigo-600"></i>Email Address
            </label>
      <input asp-for="Input.Email" 
  class="input-focus-effect w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:outline-none" 
    autocomplete="username" 
                   placeholder="you@example.com" />
         <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1 block"></span>
       </div>

                <!-- Submit Button -->
                <button type="submit" 
             class="btn-hover-effect w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold text-lg shadow-lg mb-4">
      <i class="fas fa-paper-plane mr-2"></i>Send Reset Link
        </button>

    <!-- Back to Login -->
      <div class="text-center">
              <a asp-page="./Login" class="text-indigo-600 hover:text-indigo-800 font-semibold transition">
   <i class="fas fa-arrow-left mr-2"></i>Back to Sign In
           </a>
       </div>
   </form>

       <!-- Info Box -->
  <div class="mt-8 p-4 bg-blue-50 border-l-4 border-blue-500 rounded-lg">
       <div class="flex items-start gap-3">
           <i class="fas fa-info-circle text-blue-600 text-xl mt-0.5"></i>
     <div>
          <h4 class="font-semibold text-blue-900 mb-1">Security Note</h4>
        <p class="text-sm text-blue-800">If an account exists with this email, you'll receive password reset instructions shortly.</p>
         </div>
                </div>
   </div>
        </div>

 <!-- Footer -->
        <div class="text-center mt-8 text-white">
      <p class="opacity-90">
     <i class="fas fa-shield-alt mr-2"></i>
                Secure • Protected • OSV © 2025
            </p>
</div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // Add loading state on form submit
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
         btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
         btn.disabled = true;
        });
 </script>
    
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
