        // ═══════════════════════════════════════════════════════════════
        // OPEN SEND EMAIL MODAL
        // ═══════════════════════════════════════════════════════════════
        function openSendEmailModal(bookingId) {
            const booking = currentPageBookings.find(b => b.bookingId === bookingId);
            if (!booking) {
                if (typeof showToast === 'function') showToast('Could not find booking details', 'error');
                return;
            }

            const customerName = booking.prospectName || 'Valued Customer';
            const customerEmail = booking.prospectEmail;
            const customerId = booking.customerId;

            if (!customerId) {
                if (typeof showToast === 'function') showToast('This booking is not linked to a customer.', 'warning');
                return;
            }
            if (!customerEmail) {
                if (typeof showToast === 'function') showToast(`Customer ${customerName} has no email address.`, 'warning');
                return;
            }

            document.getElementById('emailContextId').value = customerId;
            document.getElementById('emailToName').value = customerName;
            document.getElementById('emailToAddress').value = customerEmail;
            document.getElementById('emailSubject').value = `Regarding your booking (ID: ${booking.bookingId})`;
            document.getElementById('emailBody').value = `Hi ${customerName},\n\nWe're contacting you regarding your booking...\n\n`;

            openModal('sendEmailModal');
        }

        // ═══════════════════════════════════════════════════════════════
        // SUBMIT SEND EMAIL
        // ═══════════════════════════════════════════════════════════════
        async function submitSendEmail() {
            const customerId = document.getElementById('emailContextId').value;
            const subject = document.getElementById('emailSubject').value;
            const body = document.getElementById('emailBody').value;

            if (!subject || !body) {
                if (typeof showToast === 'function') showToast('Subject and body are required.', 'error');
                return;
            }

            if (typeof showToast === 'function') showToast('Sending email...', 'info');

            try {
                const requestData = {
                    customerId: parseInt(customerId),
                    subject: subject,
                    body: body
                };

                const response = await fetch('/api/customer/send-email', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
                });

                const result = await response.json();

                if (!response.ok || !result.success) {
                    throw new Error(result.message || 'Failed to send email');
                }

                if (typeof showToast === 'function') showToast(result.message || 'Email sent successfully!', 'success');
                closeModal('sendEmailModal');
                document.getElementById('emailForm').reset();

            } catch (error) {
                console.error('Error sending email:', error);
                if (typeof showToast === 'function') showToast(`Error: ${error.message}`, 'error');
            }
        }

