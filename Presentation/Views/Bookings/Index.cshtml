        // SUBMIT EDIT STATUS
        // ═══════════════════════════════════════════════════════════════
        async function submitEditStatus() {
            const bookingId = document.getElementById('editStatusBookingId').value;
            const newStatus = document.getElementById('editBookingStatus').value;

            if (typeof showToast === 'function') showToast('Updating status...', 'info');

            try {
                const response = await fetch(`/api/booking/update-status/${bookingId}?status=${newStatus}`, {
                    method: 'PUT',
                });

                const result = await response.json();

                if (!response.ok || !result.success) {
                    throw new Error(result.message || 'Failed to update status');
                }

                if (typeof showToast === 'function') showToast('Status updated successfully!', 'success');
                closeModal('editStatusModal');

                loadBookings(currentPage);
                loadStatistics();

            } catch (error) {
                console.error('Error updating status:', error);
                if (typeof showToast === 'function') showToast(`Error: ${error.message}`, 'error');
            }
        }

