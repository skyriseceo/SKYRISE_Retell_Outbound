@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skyrise</title>
    
    <!-- Font Awesome -->
 <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
  <style>
  .register-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
      .glass-effect {
            background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
    .floating-animation {
            animation: float 6s ease-in-out infinite;
  }
        
        @@keyframes float {
        0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
     
        .fade-in {
         animation: fadeIn 1s ease-out;
        }
        
    @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
 .input-focus-effect {
            transition: all 0.3s ease;
        }
        
        .input-focus-effect:focus {
  transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.2);
        }
        
        .btn-hover-effect {
            transition: all 0.3s ease;
position: relative;
            overflow: hidden;
        }
   
   .btn-hover-effect:hover {
 transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
 }
    </style>
</head>
<body class="register-gradient min-h-screen flex items-center justify-center p-4">
    <!-- Animated Background Shapes -->
 <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white opacity-10 rounded-full blur-3xl floating-animation"></div>
 <div class="absolute bottom-20 right-10 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl floating-animation" style="animation-delay: 3s;"></div>
    </div>

 <!-- Register Container -->
    <div class="w-full max-w-6xl mx-auto relative z-10 fade-in">
        <div class="glass-effect rounded-3xl shadow-2xl overflow-hidden">
<div class="grid md:grid-cols-2 gap-0">
      <!-- Left Side - Branding -->
    <div class="hidden md:flex flex-col justify-center items-center p-12 bg-gradient-to-br from-indigo-600 to-purple-700 text-white">
        <div class="text-center">
        <div class="mb-6 floating-animation">
       <i class="fas fa-user-plus text-8xl opacity-90"></i>
      </div>
     <h1 class="text-4xl font-bold mb-4">Join OSV Today!</h1>
   <p class="text-lg opacity-90 mb-8">Create your account and start managing your business</p>
     
        <div class="space-y-4 text-left max-w-sm">
          <div class="flex items-center gap-3 p-4 bg-white bg-opacity-10 rounded-lg backdrop-blur">
           <i class="fas fa-rocket text-2xl"></i>
    <div>
      <h3 class="font-semibold">Quick Setup</h3>
            <p class="text-sm opacity-80">Get started in minutes</p>
    </div>
             </div>
           <div class="flex items-center gap-3 p-4 bg-white bg-opacity-10 rounded-lg backdrop-blur">
                     <i class="fas fa-shield-alt text-2xl"></i>
          <div>
     <h3 class="font-semibold">Secure Platform</h3>
  <p class="text-sm opacity-80">Your data is protected</p>
           </div>
                 </div>
    <div class="flex items-center gap-3 p-4 bg-white bg-opacity-10 rounded-lg backdrop-blur">
<i class="fas fa-users text-2xl"></i>
        <div>
    <h3 class="font-semibold">Team Collaboration</h3>
  <p class="text-sm opacity-80">Work together efficiently</p>
           </div>
   </div>
        </div>
   </div>
       </div>

      <!-- Right Side - Register Form -->
        <div class="p-12 bg-white">
                  <div class="max-w-md mx-auto">
     <!-- Mobile Logo -->
     <div class="md:hidden text-center mb-8">
         <i class="fas fa-user-plus text-5xl text-indigo-600 mb-3"></i>
          <h2 class="text-2xl font-bold text-gray-800">OSV Dashboard</h2>
      </div>

      <h2 class="text-3xl font-bold text-gray-800 mb-2">Create Account</h2>
               <p class="text-gray-600 mb-8">Fill in your details to get started</p>

               <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
       <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-lg text-red-700" role="alert"></div>
       
             <!-- Email Input -->
       <div class="mb-6">
        <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-2">
         <i class="fas fa-envelope mr-2 text-indigo-600"></i>Email Address
    </label>
    <input asp-for="Input.Email" 
    class="input-focus-effect w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:outline-none" 
     autocomplete="username" 
      placeholder="you@example.com" />
     <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1 block"></span>
            </div>

   <!-- Password Input -->
          <div class="mb-6">
           <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-lock mr-2 text-indigo-600"></i>Password
            </label>
    <div class="relative">
               <input asp-for="Input.Password" 
    type="password"
   id="password-input"
   class="input-focus-effect w-full px-4 py-3 pr-12 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:outline-none" 
         autocomplete="new-password" 
      placeholder="Create a strong password" />
      <button type="button" 
      onclick="togglePassword('password-input', 'password-icon')"
  class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-indigo-600 transition">
      <i id="password-icon" class="fas fa-eye"></i>
   </button>
       </div>
            <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1 block"></span>
            </div>

   <!-- Confirm Password Input -->
     <div class="mb-8">
  <label asp-for="Input.ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-2">
         <i class="fas fa-lock mr-2 text-indigo-600"></i>Confirm Password
      </label>
          <div class="relative">
      <input asp-for="Input.ConfirmPassword" 
       type="password"
          id="confirm-password-input"
class="input-focus-effect w-full px-4 py-3 pr-12 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:outline-none" 
    autocomplete="new-password" 
      placeholder="Confirm your password" />
        <button type="button" 
            onclick="togglePassword('confirm-password-input', 'confirm-password-icon')"
          class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-indigo-600 transition">
             <i id="confirm-password-icon" class="fas fa-eye"></i>
    </button>
      </div>
     <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm mt-1 block"></span>
          </div>

   <!-- Submit Button -->
       <button id="registerSubmit" type="submit" 
 class="btn-hover-effect w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold text-lg shadow-lg">
     <i class="fas fa-user-plus mr-2"></i>Create Account
        </button>

         <!-- External Logins -->
          @if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
   <div class="mt-8">
       <div class="relative">
          <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
           </div>
<div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white text-gray-500 font-medium">Or register with</span>
        </div>
   </div>
 
 <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6">
             <div class="grid grid-cols-1 gap-3">
    @foreach (var provider in Model.ExternalLogins!)
        {
        <button type="submit" 
    name="provider" 
              value="@provider.Name" 
   class="flex items-center justify-center gap-3 px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition">
      <i class="fab fa-@provider.Name.ToLower() text-xl"></i>
     <span class="font-semibold">@provider.DisplayName</span>
          </button>
           }
          </div>
      </form>
             </div>
           }

    <!-- Login Link -->
  <div class="mt-8 text-center">
      <p class="text-gray-600">
           Already have an account? 
    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-600 hover:text-indigo-800 font-semibold transition">
       Sign in here <i class="fas fa-arrow-right ml-1"></i>
      </a>
       </p>
    </div>
       </form>
           </div>
       </div>
  </div>
    </div>

        <!-- Footer -->
        <div class="text-center mt-8 text-white">
            <p class="opacity-90">
     <i class="fas fa-shield-alt mr-2"></i>
Secure Registration • Protected by Skyrise Security
     </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
     function togglePassword(inputId, iconId) {
   const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            
       if (input.type === 'password') {
           input.type = 'text';
            icon.classList.remove('fa-eye');
  icon.classList.add('fa-eye-slash');
            } else {
           input.type = 'password';
         icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
    }
        }
        
        // Add loading state on form submit
        document.getElementById('registerForm').addEventListener('submit', function(e) {
         const btn = document.getElementById('registerSubmit');
  btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Creating account...';
      btn.disabled = true;
        });
    </script>
    
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
