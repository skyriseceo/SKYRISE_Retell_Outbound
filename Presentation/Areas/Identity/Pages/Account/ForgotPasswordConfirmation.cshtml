@page
@model ForgotPasswordConfirmation

@{
  ViewData["Title"] = "Check Your email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skyrise</title>
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        .confirmation-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
        
 .glass-effect {
    background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        }
     
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
   }
     
        .fade-in {
        animation: fadeIn 1s ease-out;
  }
        
  @@keyframes fadeIn {
            from { opacity: 0; }
      to { opacity: 1; }
        }
        
        .success-animation {
            animation: successPulse 2s ease-in-out infinite;
        }
        
        @@keyframes successPulse {
         0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
 
        .btn-hover-effect {
            transition: all 0.3s ease;
 }
        
        .btn-hover-effect:hover {
 transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body class="confirmation-gradient min-h-screen flex items-center justify-center p-4">
    <!-- Animated Background Shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white opacity-10 rounded-full blur-3xl floating-animation"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl floating-animation" style="animation-delay: 3s;"></div>
    </div>

 <!-- Confirmation Container -->
    <div class="w-full max-w-md mx-auto relative z-10 fade-in">
        <div class="glass-effect rounded-3xl shadow-2xl overflow-hidden p-12">
     <!-- Success Icon -->
     <div class="text-center mb-8">
          <div class="inline-block p-6 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full success-animation shadow-xl">
       <i class="fas fa-envelope-open-text text-6xl text-white"></i>
         </div>
   </div>

            <!-- Header -->
         <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-3">Check Your Email</h1>
    <p class="text-gray-600 text-lg">We've sent you password reset instructions</p>
            </div>

        <!-- Info Box -->
   <div class="space-y-4 mb-8">
        <div class="p-4 bg-blue-50 border-l-4 border-blue-500 rounded-lg">
              <div class="flex items-start gap-3">
          <i class="fas fa-info-circle text-blue-600 text-xl mt-0.5"></i>
             <div>
                  <h4 class="font-semibold text-blue-900 mb-1">Next Steps</h4>
      <ul class="text-sm text-blue-800 space-y-1">
           <li>• Check your email inbox</li>
            <li>• Click the reset link in the email</li>
    <li>• Create your new password</li>
        </ul>
  </div>
   </div>
       </div>

     <div class="p-4 bg-yellow-50 border-l-4 border-yellow-500 rounded-lg">
          <div class="flex items-start gap-3">
     <i class="fas fa-exclamation-triangle text-yellow-600 text-xl mt-0.5"></i>
  <div>
       <h4 class="font-semibold text-yellow-900 mb-1">Didn't receive the email?</h4>
         <p class="text-sm text-yellow-800">
                  Check your spam folder or 
  <a asp-page="./ForgotPassword" class="font-semibold underline hover:text-yellow-900">
try again
             </a>
        </p>
          </div>
    </div>
              </div>
            </div>

            <!-- Actions -->
   <div class="space-y-3">
      <a asp-page="./Login" 
   class="btn-hover-effect block w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold text-lg shadow-lg text-center">
         <i class="fas fa-arrow-left mr-2"></i>Back to Sign In
    </a>
    
<a href="/" 
           class="block w-full py-3 rounded-lg font-semibold text-lg border-2 border-gray-300 text-gray-700 hover:border-indigo-500 hover:text-indigo-600 hover:bg-indigo-50 transition text-center">
           <i class="fas fa-home mr-2"></i>Go to Homepage
      </a>
            </div>

     <!-- Support -->
        <div class="mt-8 pt-8 border-t border-gray-200 text-center">
         <p class="text-sm text-gray-600">
  <i class="fas fa-life-ring mr-2 text-indigo-600"></i>
            Need help? Contact support
  </p>
   </div>
        </div>

      <!-- Footer -->
        <div class="text-center mt-8 text-white">
      <p class="opacity-90 text-sm">
         <i class="fas fa-shield-alt mr-2"></i>
           Secure • Protected • Skyrise © 2025
     </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>
</html>
