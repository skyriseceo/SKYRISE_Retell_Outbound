@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skyrise</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            display: flex;
            max-width: 1000px;
            width: 100%;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes checkmark {
            0% {
                stroke-dashoffset: 100;
            }

            100% {
                stroke-dashoffset: 0;
            }
        }

        @@keyframes scaleIn {
            0% {
                transform: scale(0);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 60px 40px;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .logo {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            backdrop-filter: blur(10px);
        }

            .logo svg {
                width: 50px;
                height: 50px;
                fill: white;
            }

        .left-panel h1 {
            font-size: 32px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
        }

        .left-panel > p {
            text-align: center;
            font-size: 16px;
            opacity: 0.95;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .feature {
            background: rgba(255, 255, 255, 0.15);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 15px;
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

            .feature-icon svg {
                width: 24px;
                height: 24px;
                fill: white;
            }

        .feature-content h3 {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .feature-content p {
            font-size: 13px;
            opacity: 0.85;
            margin: 0;
        }

        .right-panel {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .success-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            animation: scaleIn 0.6s ease-out;
            box-shadow: 0 10px 30px rgba(72, 187, 120, 0.3);
        }

            .success-icon svg {
                width: 70px;
                height: 70px;
            }

        .checkmark {
            stroke: white;
            stroke-width: 3;
            stroke-linecap: round;
            stroke-linejoin: round;
            fill: none;
            stroke-dasharray: 100;
            stroke-dashoffset: 100;
            animation: checkmark 0.6s ease-out 0.3s forwards;
        }

        .right-panel h2 {
            font-size: 32px;
            color: #1a1a2e;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .right-panel .subtitle {
            color: #666;
            margin-bottom: 35px;
            font-size: 16px;
            line-height: 1.6;
            max-width: 400px;
        }

        .success-message {
            background: #f0fff4;
            border-left: 4px solid #48bb78;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            text-align: left;
            width: 100%;
        }

            .success-message h4 {
                color: #22543d;
                font-size: 16px;
                margin-bottom: 8px;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .success-message p {
                color: #276749;
                font-size: 14px;
                line-height: 1.6;
                margin: 0;
            }

        .info-box {
            background: #f7fafc;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            text-align: left;
            width: 100%;
        }

            .info-box h4 {
                color: #2d3748;
                font-size: 14px;
                margin-bottom: 12px;
                font-weight: 600;
            }

            .info-box ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .info-box li {
                color: #4a5568;
                font-size: 13px;
                padding: 8px 0;
                padding-left: 25px;
                position: relative;
            }

                .info-box li:before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    color: #48bb78;
                    font-weight: bold;
                    font-size: 16px;
                }

        .btn-primary {
            padding: 14px 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            }

            .btn-primary svg {
                width: 20px;
                height: 20px;
                fill: white;
            }

        .footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
            width: 100%;
        }

            .footer p {
                color: #718096;
                font-size: 13px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 8px;
            }

            .footer svg {
                width: 16px;
                height: 16px;
                fill: #667eea;
            }

        .countdown {
            margin-top: 20px;
            color: #718096;
            font-size: 14px;
        }

            .countdown span {
                color: #667eea;
                font-weight: 600;
            }

        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .left-panel {
                padding: 40px 30px;
            }

            .right-panel {
                padding: 40px 30px;
            }

                .right-panel h2 {
                    font-size: 26px;
                }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <div class="logo">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                </svg>
            </div>
            <h1>All Set!</h1>
            <p>Your password has been successfully reset. You can now access your account with your new credentials.</p>

            <div class="feature">
                <div class="feature-icon">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z" />
                    </svg>
                </div>
                <div class="feature-content">
                    <h3>Secure Password</h3>
                    <p>Your password is encrypted and protected</p>
                </div>
            </div>

            <div class="feature">
                <div class="feature-icon">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                    </svg>
                </div>
                <div class="feature-content">
                    <h3>Ready to Use</h3>
                    <p>Your account is ready for immediate access</p>
                </div>
            </div>

            <div class="feature">
                <div class="feature-icon">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
                    </svg>
                </div>
                <div class="feature-content">
                    <h3>Stay Updated</h3>
                    <p>Check your email for confirmation</p>
                </div>
            </div>
        </div>

        <div class="right-panel">
            <div class="success-icon">
                <svg viewBox="0 0 52 52" xmlns="http://www.w3.org/2000/svg">
                    <path class="checkmark" d="M14 27l7.5 7.5L38 18" />
                </svg>
            </div>

            <h2>Password Reset Complete! 🎉</h2>
            <p class="subtitle">Your password has been successfully changed. You can now sign in with your new password.</p>

            <div class="success-message">
                <h4>
                    <span>✅</span>
                    Success!
                </h4>
                <p>Your password has been securely updated. For your security, we recommend using a unique password that you don't use on other websites.</p>
            </div>

            <div class="info-box">
                <h4>Next Steps:</h4>
                <ul>
                    <li>Sign in with your new password</li>
                    <li>Update your password manager if you use one</li>
                    <li>Check your email for confirmation</li>
                    <li>Enable two-factor authentication for extra security</li>
                </ul>
            </div>

            <a asp-page="./Login" class="btn-primary">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11 7L9.6 8.4l2.6 2.6H2v2h10.2l-2.6 2.6L11 17l5-5-5-5zm9 12h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-8v2h8v14z" />
                </svg>
                Sign In Now
            </a>

            <div class="countdown" id="countdown">
                Redirecting to login in <span id="timer">10</span> seconds...
            </div>

            <div class="footer">
                <p>
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2z" />
                    </svg>
                    Secure Login • Protected by Skyrise Security
                </p>
            </div>
        </div>
    </div>

    <script>
        let timeLeft = 10;
        const timerElement = document.getElementById('timer');

        const countdown = setInterval(() => {
            timeLeft--;
            timerElement.textContent = timeLeft;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                window.location.href = '/Identity/Account/Login';
            }
        }, 1000);
        document.addEventListener('click', () => {
            clearInterval(countdown);
            document.getElementById('countdown').style.display = 'none';
        });
    </script>
</body>
</html>