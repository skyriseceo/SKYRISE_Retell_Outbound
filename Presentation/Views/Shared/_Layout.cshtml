<!DOCTYPE html>
<html lang="en" x-data="layout()" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Skyrise</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Readex Pro', sans-serif;
        }
    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.13.3/cdn.min.js" defer></script>
</head>

<body class="bg-gray-100">

    <aside :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'"
           class="sidebar fixed top-0 left-0 z-50 h-screen w-64 bg-gradient-to-b from-indigo-600 to-indigo-800 text-white transition-transform duration-300 shadow-xl">

        <div class="flex items-center justify-between px-6 py-6 border-b border-white/10">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center">
                    <i class="fas fa-headset text-xl"></i>
                </div>
                <span class="text-xl font-bold">Skyrise Dashboard</span>
            </div>

            <button x-on:click="sidebarOpen = false" class="text-white/70 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <nav class="px-3 py-4 space-y-1">

            <a href="@Url.Action("Index", "Home")"
               class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
               x-on:click="sidebarOpen = false">
                <i class="fas fa-home w-5"></i>
                <span>Dashboard</span>
            </a>

            <a href="@Url.Action("Index", "Bookings")"
               class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings" ? "active" : "")"
               x-on:click="sidebarOpen = false">
                <i class="fas fa-calendar-check w-5"></i>
                <span>Bookings</span>
            </a>

            <a href="@Url.Action("Index", "UserManagement")"
               class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "UserManagement" ? "active" : "")"
               x-on:click="sidebarOpen = false">
                <i class="fas fa-users-cog w-5"></i>
                <span>Users</span>
            </a>

            <a href="@Url.Action("Index", "Settings")"
               class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")"
               x-on:click="sidebarOpen = false">
                <i class="fas fa-cog w-5"></i>
                <span>Settings</span>
            </a>
        </nav>

        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-white/10">
            <div class="flex items-center gap-3 px-3 py-2 bg-white/10 rounded-lg">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-user"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-semibold truncate">@User.Identity?.Name</p>
                    <p class="text-xs text-white/80">Administrator</p>
                </div>
            </div>
        </div>
    </aside>

    <div :class="sidebarOpen ? 'ml-64' : 'ml-0'" class="transition-all duration-300">

        <header class="sticky top-0 z-40 bg-white shadow-sm">
            <div class="flex items-center justify-between px-6 py-4">
                <button x-on:click="sidebarOpen = !sidebarOpen" class="text-gray-600 hover:text-gray-900">
                    <i class="fas fa-bars text-xl"></i>
                </button>

                <div class="flex items-center gap-4">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit"
                                class="flex items-center gap-2 px-4 py-2 font-medium text-red-600 bg-red-50 border border-red-200 rounded-lg transition-all duration-200 hover:bg-red-100 hover:border-red-300 hover:shadow-sm">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </div>
        </header>

        <main class="p-6">
            @RenderBody()
        </main>
    </div>

    <div id="toastContainer" class="fixed bottom-4 right-4 z-50 space-y-2 w-full max-w-xs sm:max-w-sm"></div>

    <button id="scrollToTopBtn"
            x-data="{ show: false }"
            x-show="show"
            x-transition:enter="transition-opacity duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition-opacity duration-300"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            x-on:scroll.window="show = (window.pageYOffset > 300)"
            x-on:click="window.scrollTo({ top: 0, behavior: 'smooth' })"
            class="fixed bottom-8 right-8 z-50 w-12 h-12 bg-indigo-600 text-white rounded-full shadow-lg hover:bg-indigo-700 transition-all">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        // دالة Alpine.js الرئيسية لإدارة حالة الواجهة
        function layout() {
            return {
                // القيمة الافتراضية: مفتوح على الديسكتوب (>= 1024px)، مغلق على الموبايل
                sidebarOpen: localStorage.getItem('sidebarOpen')
                             ? localStorage.getItem('sidebarOpen') === 'true'
                             : window.innerWidth >= 1024,

                // مراقبة أي تغيير على sidebarOpen وحفظه في localStorage
                init() {
                    this.$watch('sidebarOpen', val => {
                        localStorage.setItem('sidebarOpen', val);
                    });
                }
            };
        }

        // دالة إظهار الإشعارات (Toast) الموحدة
        function showToast(message, type = 'info') {
            const container = document.getElementById('toastContainer');
            if (!container) return;

            const toast = document.createElement('div');

            const icons = {
                success: 'fa-check-circle',
                error: 'fa-exclamation-circle',
                warning: 'fa-exclamation-triangle',
                info: 'fa-info-circle'
            };

            const colors = {
                success: 'bg-green-500 border-green-600',
                error: 'bg-red-500 border-red-600',
                warning: 'bg-yellow-500 border-yellow-600',
                info: 'bg-blue-500 border-blue-600'
            };

            const icon = icons[type] || icons['info'];
            const color = colors[type] || colors['info'];

            toast.className = `toast ${color} flex items-center gap-3 px-4 py-3 rounded-lg shadow-lg text-white transform translate-x-full transition-all duration-300 ease-in-out border-l-4`;
            toast.style.fontFamily = "'Readex Pro', sans-serif";
            toast.innerHTML = `
                <i class="fas ${icon} text-xl"></i>
                <span class="flex-1 text-sm font-medium">${message}</span>
                <button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            `;

            container.appendChild(toast);

            // Animate in
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
            }, 10);

            // Auto remove after 4 seconds
            setTimeout(() => {
                toast.classList.add('translate-x-full');
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }

        // Handle logout form
        document.querySelectorAll('form[asp-page="/Account/Logout"]').forEach(form => {
            form.addEventListener('submit', function (e) {
                const btn = this.querySelector('button[type="submit"]');
                if (btn) {
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Logging out...';
                    btn.disabled = true;
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>