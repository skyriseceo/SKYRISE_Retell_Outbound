</div>

<!--
    ═══════════════════════════════════════════════════════════════
    [REFACTORED] CONTENT CONTAINER
    ═══════════════════════════════════════════════════════════════
-->
<div x-data="{ activeTab: 'profile' }">
    <div class="content-container">
        <!-- Using .content-container for consistent styling -->
        <div class="border-b border-gray-200">
            <nav class="flex -mb-px" style="padding: 0 2rem;">
                <!-- Added padding -->
                <button @@click="activeTab = 'profile'"
                        :class="activeTab === 'profile' ? 'border-indigo-600 text-indigo-600 bg-indigo-50 px-6 py-4 font-semibold border-b-2 transition-all duration-200 flex items-center gap-2' : 'border-transparent text-gray-600 hover:text-gray-900 hover:border-gray-300 px-6 py-4 font-semibold border-b-2 transition-all duration-200 flex items-center gap-2'">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </button>

                <button @@click="activeTab = 'security'"
                        :class="activeTab === 'security' ? 'border-indigo-600 text-indigo-600 bg-indigo-50 px-6 py-4 font-semibold border-b-2 transition-all duration-200 flex items-center gap-2' : 'border-transparent text-gray-600 hover:text-gray-900 hover:border-gray-300 px-6 py-4 font-semibold border-b-2 transition-all duration-200 flex items-center gap-2'">
                    <i class="fas fa-lock"></i>
                    <span>Security</span>
                </button>
            </nav>
        </div>

        <div class="p-8" x-data="settingsData()">
            <!-- Profile Tab -->
            <div x-show="activeTab === 'profile'" x-transition class="space-y-6">
                <div class="flex items-center gap-6 p-6 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl border border-indigo-100">
                    <div class="avatar-xl flex-shrink-0">
                        <span x-text="getInitials(profile.userName)"></span>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-bold text-gray-900" x-text="profile.userName" style="font-size: 2rem; font-weight: 800;"></h3>
                        <p class="text-gray-600" x-text="profile.email" style="font-size: 1rem;"></p>
                        <div class="flex items-center gap-2 mt-2">
                            <span class="badge badge-success" x-show="profile.emailConfirmed">
                                <i class="fas fa-check-circle"></i>Verified
                            </span>
                            <span class="badge badge-warning" x-show="!profile.emailConfirmed">
                                <i class="fas fa-exclamation-circle"></i>Not Verified
                            </span>
                            <template x-for="role in profile.roles" :key="role">
                                <span class="badge badge-purple">
                                    <i class="fas fa-shield-alt"></i>
                                    <span x-text="role"></span>
                                </span>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- Profile Form -->
                <div class="space-y-4">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div class="form-group">
                            <label class="form-label">Username</label>
                            <input type="text" x-model="profile.userName" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" x-model="profile.email" class="form-input" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <input type="tel" x-model="profile.phoneNumber" class="form-input" placeholder="+1234567890">
                    </div>

                    <!-- [REFACTORED] Form Footer -->
                    <div class="form-footer">
                        <button type="button" @@click="loadProfile" class="btn btn-secondary" :disabled="profileLoading">
                            <i class="fas fa-undo"></i>Reset
                        </button>
                        <button type="button" @@click="updateProfile" class="btn btn-primary" :disabled="profileLoading">
                            <span x-show="!profileLoading">
                                <i class="fas fa-save"></i>Save Changes
                            </span>
                            <span x-show="profileLoading" class="spinner-sm"></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Security Tab -->
            <div x-show="activeTab === 'security'" x-transition class="space-y-6">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>Password Security</strong>
                        <p class="text-sm">Choose a strong password with at least 8 characters, including uppercase, lowercase, numbers, and symbols.</p>
                    </div>
                </div>

                <!-- Password Form -->
                <div class="space-y-4 max-w-2xl">
                    <div class="form-group">
                        <label class="form-label">Current Password</label>
                        <div class="form-input-wrapper">
                            <input x-bind:type="showCurrentPassword ? 'text' : 'password'"
                                   x-model="passwordForm.currentPassword"
                                   class="form-input"
                                   required>
                            <i :class="showCurrentPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"
                               @@click="showCurrentPassword = !showCurrentPassword"
                               class="form-input-icon"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <div class="form-input-wrapper">
                            <input x-bind:type="showNewPassword ? 'text' : 'password'"
                                   x-model="passwordForm.newPassword"
                                   class="form-input"
                                   required>
                            <i :class="showNewPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"
                               @@click="showNewPassword = !showNewPassword"
                               class="form-input-icon"></i>
                        </div>
                        <!-- Password strength indicators (from original file) -->
                        <div class="mt-2 space-y-1">
                            <div class="flex items-center gap-2 text-sm">
                                <i :class="passwordForm.newPassword.length >= 8 ? 'fas fa-check-circle text-green-600' : 'fas fa-circle text-gray-300'"></i>
                                <span :class="passwordForm.newPassword.length >= 8 ? 'text-green-700' : 'text-gray-600'">At least 8 characters</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <i :class="/[A-Z]/.test(passwordForm.newPassword) ? 'fas fa-check-circle text-green-600' : 'fas fa-circle text-gray-300'"></i>
                                <span :class="/[A-Z]/.test(passwordForm.newPassword) ? 'text-green-700' : 'text-gray-600'">Contains uppercase letter</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <i :class="/[0-9]/.test(passwordForm.newPassword) ? 'fas fa-check-circle text-green-600' : 'fas fa-circle text-gray-300'"></i>
                                <span :class="/[0-9]/.test(passwordForm.newPassword) ? 'text-green-700' : 'text-gray-600'">Contains number</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Confirm New Password</label>
                        <div class="form-input-wrapper">
                            <input x-bind:type="showConfirmPassword ? 'text' : 'password'"
                                   x-model="passwordForm.confirmPassword"
                                   class="form-input"
                                   required>
                            <i :class="showConfirmPassword ? 'fas fa-eye-slash' : 'fas fa-eye'"
                               @@click="showConfirmPassword = !showConfirmPassword"
                               class="form-input-icon"></i>
                        </div>
                        <p x-show="passwordForm.newPassword && passwordForm.confirmPassword && passwordForm.newPassword !== passwordForm.confirmPassword"
                           class="text-red-600 text-sm mt-1" style="color: var(--danger-600); font-weight: 600;">
                            <i class="fas fa-exclamation-circle"></i> Passwords do not match
                        </p>
                    </div>

                    <!-- [REFACTORED] Form Footer -->
                    <div class="form-footer">
                        <button type="button" @@click="resetPasswordForm" class="btn btn-secondary">
                            <i class="fas fa-times"></i>Cancel
                        </button>
                        <button type="button" @@click="changePassword" class="btn btn-primary" :disabled="passwordLoading || !passwordForm.newPassword || passwordForm.newPassword !== passwordForm.confirmPassword">
                            <span x-show="!passwordLoading">
                                <i class="fas fa-key"></i>Change Password
                            </span>
                            <span x-show="passwordLoading" class="spinner-sm"></span>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- Preserved all original Alpine.js logic -->
    <script>
        function settingsData() {
            return {
                profile: {
                    userName: '',
                    email: '',
                    phoneNumber: '',
                    emailConfirmed: false,
                    roles: []
                },
                passwordForm: {
                    currentPassword: '',
                    newPassword: '',
                    confirmPassword: ''
                },
                profileLoading: false,
                passwordLoading: false,
                showCurrentPassword: false,
                showNewPassword: false,
                showConfirmPassword: false,

                init() {
                    this.loadProfile();
                },

                async loadProfile() {
                    try {
                        const response = await fetch('/api/settings/profile');
                        if (!response.ok) throw new Error('Failed to load profile');
                        this.profile = await response.json();
                    } catch (error) {
                        console.error('Error loading profile:', error);
                        showToast('Failed to load profile', 'error');
                    }
                },

                async updateProfile() {
                    this.profileLoading = true;
                    try {
                        const response = await fetch('/api/settings/Updateprofilee', {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(this.profile)
                        });
                        const result = await response.json();

                        if (!response.ok) {
                            throw new Error(result.message || 'Failed to update profile');
                        }

                        showToast('Profile updated successfully', 'success');
                        await this.loadProfile();
                    } catch (error) {
                        console.error('Error updating profile:', error);
                        showToast(error.message || 'Failed to update profile', 'error');
                    } finally {
                        this.profileLoading = false;
                    }
                },

                async changePassword() {
                    if (this.passwordForm.newPassword !== this.passwordForm.confirmPassword) {
                        showToast('Passwords do not match', 'warning');
                        return;
                    }

                    this.passwordLoading = true;
                    try {
                        const response = await fetch('/api/settings/password', {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(this.passwordForm)
                        });
                        const result = await response.json();

                        if (!response.ok) {
                            // Display detailed error messages if available
                            if (result.errors && Array.isArray(result.errors) && result.errors.length > 0) {
                                result.errors.forEach(err => showToast(err, 'error'));
                            } else {
                                throw new Error(result.message || 'Failed to change password');
                            }
                            return;
                        }

                        showToast('Password changed successfully', 'success');
                        this.resetPasswordForm();
                    } catch (error) {
                        console.error('Error changing password:', error);
                        showToast(error.message || 'Failed to change password', 'error');
                    } finally {
                        this.passwordLoading = false;
                    }
                },

                resetPasswordForm() {
                    this.passwordForm = {
                        currentPassword: '',
                        newPassword: '',
                        confirmPassword: ''
                    };
                },

                getInitials(name) {
                    if (!name) return '??';
                    const parts = name.split(' ');
                    if (parts.length >= 2) {
                        return (parts[0][0] + parts[1][0]).toUpperCase();
                    }
                    return name.substring(0, 2).toUpperCase();
                }
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
             // Fallback for showToast if not defined from _Layout
            if (typeof showToast === 'undefined') {
                console.warn("showToast function is not defined. Using fallback.");
                window.showToast = function(message, type) {
                    alert(`(${type}): ${message}`);
                }
            }
        });
    </script>
}
