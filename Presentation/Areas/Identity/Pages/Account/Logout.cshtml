@page
@model LogoutModel
@{
    ViewData["Title"] = "Sign Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skyrise</title>
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        .logout-gradient {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .fade-in {
            animation: fadeIn 1s ease-out;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .scale-in {
            animation: scaleIn 0.5s ease-out;
        }
        
        @@keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        .btn-hover-effect {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn-hover-effect:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(245, 87, 108, 0.4);
        }
        
        .success-checkmark {
            animation: checkmark 0.8s ease-in-out;
        }
        
        @@keyframes checkmark {
            0% {
                transform: scale(0) rotate(0deg);
                opacity: 0;
            }
            50% {
                transform: scale(1.2) rotate(180deg);
            }
            100% {
                transform: scale(1) rotate(360deg);
                opacity: 1;
            }
        }
    </style>
</head>
<body class="logout-gradient min-h-screen flex items-center justify-center p-4">
    <!-- Animated Background Shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-white opacity-10 rounded-full blur-3xl floating-animation"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl floating-animation" style="animation-delay: 3s;"></div>
    </div>

    <!-- Logout Container -->
    <div class="w-full max-w-md mx-auto relative z-10 fade-in">
        <div class="glass-effect rounded-3xl shadow-2xl overflow-hidden p-12 scale-in">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <!-- Logout Confirmation -->
                <div class="text-center">
                    <div class="mb-6 inline-block p-6 bg-gradient-to-br from-red-500 to-pink-500 rounded-full floating-animation">
                        <i class="fas fa-sign-out-alt text-5xl text-white"></i>
                    </div>
                    
                    <h1 class="text-3xl font-bold text-gray-800 mb-3">Sign Out</h1>
                    <p class="text-gray-600 mb-8">Are you sure you want to sign out of your account?</p>
                    
                    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-8 text-left">
                        <div class="flex items-start gap-3">
                            <i class="fas fa-exclamation-triangle text-yellow-600 text-xl mt-0.5"></i>
                            <div>
                                <h4 class="text-yellow-800 font-semibold mb-1">Before you go</h4>
                                <ul class="text-sm text-yellow-700 space-y-1">
                                    <li>• Make sure all your work is saved</li>
                                    <li>• You'll need to sign in again to access your dashboard</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" class="space-y-4">
                        <button type="submit" 
                                class="btn-hover-effect w-full bg-gradient-to-r from-red-500 to-pink-600 text-white py-3 rounded-lg font-semibold text-lg shadow-lg">
                            <i class="fas fa-sign-out-alt mr-2"></i>Yes, Sign Me Out
                        </button>
                        
                        <a href="@Url.Action("Index", "Home")" 
                           class="btn-hover-effect block w-full py-3 rounded-lg font-semibold text-lg border-2 border-gray-300 text-gray-700 hover:border-indigo-500 hover:text-indigo-600 hover:bg-indigo-50 transition">
                            <i class="fas fa-arrow-left mr-2"></i>Cancel
                        </a>
                    </form>
                    
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <p class="text-sm text-gray-600">
                            <i class="fas fa-lock mr-2 text-indigo-600"></i>
                            Your session is secure
                        </p>
                    </div>
                </div>
            }
            else
            {
                <!-- Successfully Logged Out -->
                <div class="text-center">
                    <div class="mb-6 inline-block success-checkmark">
                        <div class="w-24 h-24 mx-auto bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-5xl text-white"></i>
                        </div>
                    </div>
                    
                    <h1 class="text-3xl font-bold text-gray-800 mb-3">Successfully Signed Out</h1>
                    <p class="text-gray-600 mb-8">You have been securely logged out of your account.</p>
                    
                    <div class="space-y-3 mb-8">
                        <div class="flex items-center justify-center gap-3 p-4 bg-green-50 rounded-lg">
                            <i class="fas fa-check-circle text-green-600 text-2xl"></i>
                            <div class="text-left">
                                <h4 class="font-semibold text-gray-800">Session Ended</h4>
                                <p class="text-sm text-gray-600">Your data is safe and secure</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <a asp-area="Identity" asp-page="/Account/Login" 
                           class="btn-hover-effect block w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold text-lg shadow-lg">
                            <i class="fas fa-sign-in-alt mr-2"></i>Sign In Again
                        </a>
                        
                        <a href="/" 
                           class="block w-full py-3 rounded-lg font-semibold text-lg border-2 border-gray-300 text-gray-700 hover:border-indigo-500 hover:text-indigo-600 hover:bg-indigo-50 transition">
                            <i class="fas fa-home mr-2"></i>Go to Homepage
                        </a>
                    </div>
                    
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <p class="text-sm text-gray-600">
                            <i class="fas fa-info-circle mr-2 text-blue-600"></i>
                            Thank you for using Skyrise Dashboard
                        </p>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="text-center mt-8 text-white">
            <p class="opacity-90 text-sm">
                <i class="fas fa-shield-alt mr-2"></i>
                Secure • Protected • Skyrise © 2025
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // Add loading state on logout form submit
        const logoutForm = document.querySelector('form[action*="Logout"]');
        if (logoutForm) {
            logoutForm.addEventListener('submit', function(e) {
                const btn = this.querySelector('button[type="submit"]');
                if (btn) {
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Signing out...';
                    btn.disabled = true;
                }
            });
        }
    </script>
</body>
</html>
